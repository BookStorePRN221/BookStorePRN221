@page
@model RazorWeb.Pages.LoginModel
@{
    Layout = null;
}
<head>
    <meta charset="UTF-8">
    <title>Login Page</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/loginFormStyle.css">
    @* Modal*@
    

    <style>
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7); /* Màu mờ là màu đen */
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: navajowhite;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            width:450px;
            height:150px;
        }

        .close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size:30px;
            color:red;
        }

      
    </style>
</head>

<body>

    <section class='login centered-element' id='login'>
        <div class='head'>
            <h1 class='company'>Phuong Nam Book Store</h1>
        </div>
        <p class='msg'>Welcome to Login</p>
        <div class='form'>
            <form method="post">
                <input type="text" asp-for="@Model.login.User_Account" placeholder='Username' class='text' id='username' ><br>
                <input type="password" asp-for="@Model.login.User_Password" placeholder='Password' class='password' ><br>
                <input type="submit" class='btn-login' value="Login" />
                <input type="reset" class="btn-cancel" value="Cancel" />
            </form>
            <p>Did you forget your password? <button type="button" class="btn btn-outline-info" onclick="openModal()">Recover Password</button></p>
        </div>
    </section>
    <!-- Modal -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close-button" onclick="closeModal()">&times;</span>
            <h2 style="font-size:25px;font-weight:100">Recover Password By Your Email</h2>
            <form method="post" asp-page-handler="Email">
                <input type="text" placeholder="Enter your email" class="form-control" name="email">
            <button type="submit" style="width:150px;margin-top:5px;margin: 10px auto; display: block;" class="btn btn-primary">Send Email</button>
            </form>
        </div>
    </div>
   
    <!-- partial -->
    <script src="~/js/LoginForm.js"></script>
    <!-- JavaScript cho modal -->
    <script>
        function openModal() {
            var modal = document.getElementById("myModal");
            modal.style.display = "flex";
        }

        function closeModal() {
            var modal = document.getElementById("myModal");
            modal.style.display = "none";
        }
       
      
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>

<script>
    $(document).ready(function () {
        $('.toast').toast('show');
    });
</script>
