    @*Form Create Request*@
        <!-- home content -->
        <div class="home-section">
            <!-- home-content -->
            <div class="home-content">
                <div class="overview-tableBookRequest">
                    <div class="wraper_addBookingRequest_nameTable">
                    <button type="button"  class="btnCallCreate" data-toggle="modal" data-target="#myModal">
                        <i class="fa-solid fa-plus"></i> Add book request
                    </button>
                    </div>
                    <hr style="width: 25.7rem;"/>
                    <h2 id="nameTable">LIST OF BOOK REQUEST</h2>
                    <div class="tableBookRequest" >
                            <table class="table">
                        <thead class="thead-dark" style="padding-top: 12px;
                                       padding-bottom: 12px;
                                       text-align: center;
                                       background-color: #1d727e;
                                       color: white;
                                       font-size: 1.5rem;">
                                       <tr>
                                         <th>.No</th>
                                        <th >Image</th>
                                        <th >Name</th>
                                         <th >Quantity</th>
                                        <th >Price</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                        <th>Date Complete</th>
                                        <th>Note</th>
                                        <th>Status</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody style="font-size: 12px">
                            @{
                                var count = 1;
                                var number = 0;
                                bool isCheckModal=true;
                            }
                            @foreach (var r in Model.requestDTOs){
                                @if (@r.Is_Request_Status > 0)
                                {
                                    <form method="post">
                                    <tr>
                                        <input type="hidden" asp-for="@Model.request.Request_Id" value="@r.Request_Id" />
                                        <input type="hidden" asp-for="@Model.request.Request_Image_Url" value="@r.Request_Image_Url" />
                                        <td>
                                            <p>@count</p>
                                                @{
                                                    count++;
                                                    number++;
                                                }
                                        </td>
                                        <td>
                                            <img style="height: 100px;width: 100px" src="@r.Request_Image_Url" alt="..."
                                            id="imageBookRequest">
                                        </td>
                                        <td>
                                            <p>@r.Request_Book_Name</p>
                                        </td>
                                        <td>
                                            <p >@r.Request_Quantity</p>
                                        </td>
                                        <td>
                                            <p>@r.Request_Price<small style="text-decoration:underline">đ</small></p>
                                        </td>
                                        <td>
                                            <p >@r.Request_Amount<small style="text-decoration:underline">đ</small></p>
                                        </td>
                                        <td>

                                            <p  asp-format="{0:yyyy-MM-dd}" >@r.Request_Date.ToString("yyyy-MM-dd")</p>
                                        </td>
                                        <td>
                                             @if (r.Is_Request_Status == 2) {
                                             <p  asp-format="{0:yyyy-MM-dd}" >@r.Request_Date_Done.ToString("yyyy-MM-dd")</p>
                                             }else{
                                                 <p></p>
                                             }
                                        </td>
                                        <td>
                                            <p>@r.Request_Note</p>
                                        </td>
                                        <td id="statusProcess">

                                            @if (r.Is_Request_Status == 1) {
                                                <span style="color: #fab804ea;margin-left: 40px;">Proceeding</span>
                                            }
                                            @if (r.Is_Request_Status == 2) {
                                                <span style="color: #1ace1a;margin-left: 40px;">Done</span>
                                            }
                                           @if (r.Is_Request_Status == 3) {
                                                <span style="color: red;margin-left: 40px;">Un Done</span>
                                           }
                                        </td>
                                        <td>
                                             @if(r.Is_RequestBook_Status == true)
                                            {
                                                  isCheckModal = true;
                                                    <button type="button"  class="btnUpdate" data-toggle="modal" data-target="#myModal-@number" data>
                                                    <i class="fa-solid fa-plus"></i>
                                                </button>
                                            }
                                            @*<select class="textInforEmployee" style="margin-left:25px" asp-for=@Model.request.Is_RequestBook_Status>
                                                @if (r.Is_RequestBook_Status == true)
                                                {
                                                    <option style="color: green" value="true">New</option>
                                                    <option style="color: red" value="false">Old</option>
                                                }
                                                else
                                                {
                                                    <option style="color: red" value="false">Old</option>
                                                    <option style="color: green" value="true">New</option>
                                                }
                                            </select>*@
                                        </td>
                                        <td>
                                             @if (r.Is_Request_Status == 1 && r.Is_RequestBook_Status == false) {
                                                  isCheckModal = false;
                                                <button type="button" class="btnUpdate" data-toggle="modal" data-target="#myModal-@number">
                                                <i class="bx bxs-message-square-x"></i>
                                            </button>
                                             }
                                        </td>
                                    </tr>
                                    </form>
                                }
                                @*Create Book*@
                                <div class="modal fade" id="myModal-@number" role="dialog" aria-labelledby="myModalLabel">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">

                                            <!-- Modal Header -->
                                            <div class="modal-header" style="background-color: #247774; text-align: center;">
                                                <h3 style="margin-top: 20px; width: 100%; color:white; font-size:20px;">CREATE BOOK</h3>
                                            </div>

                                            <!-- Modal body -->
                                            <div class="modal-body">
                                                <div class="tab-content" id="pills-tabContent">
                                                    <div class="tab-pane fade show active" id="newBook" role="tabpanel"
                                                         aria-labelledby="pills-project-tab">
                                                       
                                                        <div style="background-color: cornsilk">
                                                            @if (isCheckModal)
                                                            {
                                                                <form method="post" >
                                                                    <input type="hidden" name="number" value="2" />
                                                            <div>
                                                                <div class="appearBook">
                                                                    <input type="hidden" asp-for="@Model.bookDTO.Request_Id" value="@r.Request_Id" />
                                                                    <input type="hidden" asp-for="@Model.bookDTO.Image_URL" value="@r.Request_Image_Url" />
                                                                    <input asp-for="@Model.bookDTO.Category_Id" value="@r.Category_Id" type="hidden" />

                                                                    <div class="item d-flex" style="margin-bottom:10px; margin-left:10px;">
                                                                        <i class="fa-solid fa-book"></i>
                                                                        <input type="hidden" asp-for="@Model.bookDTO.Book_Title" value="@r.Request_Book_Name" />
                                                                        <p>@r.Request_Book_Name</p>
                                                                    </div>
                                                                    <div class="item d-flex" style="margin-bottom:10px;margin-left:10px;">
                                                                        <i class="fa-solid fa-user-tie"></i>
                                                                        <input asp-for="@Model.bookDTO.Book_Author" placeholder="Author" />

                                                                    </div>
                                                                    <div class="item d-flex" style="margin-bottom:10px;margin-left:10px;">
                                                                        <i class="fa-solid fa-list-ol"></i>
                                                                        <input asp-for="@Model.bookDTO.Book_Quantity" value="@r.Request_Quantity" type="hidden" />
                                                                        <p>@r.Request_Quantity</p>
                                                                    </div>
                                                                        <div class="item d-flex" style="margin-bottom:10px;margin-left:10px;">
                                                                        <i class="fa-regular fa-money-bill-1"></i>
                                                                        <input asp-for="@Model.bookDTO.Book_Price" value="@r.Request_Price" type="hidden" />
                                                                        <p>@r.Request_Price</p>
                                                                    </div>

                                                                </div>

                                                                <div class="d-flex" style="margin-top: 30px; margin-left: 150px;">
                                                                    <button type="button" class="btn btn-danger" data-dismiss="modal" style="font-size:10px;;margin-right:5px;">Cancel</button>
                                                                    <button type="submit" class="btn btn-primary"
                                                                            style="font-size:10px;;margin-right:5px;">
                                                                        Create Book
                                                                    </button>
                                                                </div>
                                                                </div>
                                                                </form>
                                                            }else
                                                            {
                                                                <form method="post">
                                                                    <input type="hidden" name="number" value="3" />
                                                                    <div class="appearBook">
                                                                        <input type="hidden" asp-for="@Model.request.Request_Id" value="@r.Request_Id" />
                                                                        <div class="item d-flex">
                                                                            <input />
                                                                            <textarea asp-for="@Model.request.Request_Note" rows="8" cols="40"/>
                                                                        </div>
                                                                    </div>
                                                                    <div class="d-flex" style="margin-top: 30px; margin-left: 150px;">
                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal" style="font-size:10px;margin-right:5px;">Cancel</button>
                                                                        <button type="submit" class="btn btn-primary" style="font-size:10px;margin-right:5px;">
                                                                            Request Again
                                                                        </button>
                                                                </form>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @*Create Book*@
                               
                            }
                            }
                        </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
    @*Form Create Request*@
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <ul class="switch nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li>
                            <a class="nav-link active" id="pills-project-tab" data-toggle="pill" href="#newBook"
                               role="tab" aria-controls="pills-project" aria-selected="true" style="color:azure">Add New Book</a>
                        </li>
                        <li>
                            <a class="nav-link" id="pills-illustration-tab" data-toggle="pill" href="#oldBook"
                               role="tab" aria-controls="pills-illustration" aria-selected="false" style="color:azure">
                                Add Existing Book
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="tab-content" id="pills-tabContent">
                         @* Create Book new*@
                        <div class="tab-pane fade show active" id="newBook" role="tabpanel"
                             aria-labelledby="pills-project-tab">
                            <div>
                                <h2 style="color:azure">Create Booking Request</h2><br>
                                    <form method="post">
                                         <input type="hidden" name="number" value="1" />
                                <input type="text" placeholder="Image url" asp-for="@Model.request.Request_Image_Url" style="margin-bottom:10px;"><br>
                                <input type="text" placeholder="Book's name" asp-for="@Model.request.Request_Book_Name" style="margin-bottom:10px;"><br>
                                <input type="number" placeholder="Quantity" asp-for="@Model.request.Request_Quantity" style="margin-bottom:10px;"><br>
                                <input type="number" placeholder="Price" asp-for="@Model.request.Request_Price" style="margin-bottom:10px;"><br>
                                <select class="form-select" asp-for="@Model.request.Category_Id" style="width:205.33px; height: 27.56px; font-size:15px;margin:0 0 0 136px;">
                                    @foreach (var i in Model.listCate)
                                    {
                                        <option value="@i.Category_Id">@i.Category_Name</option>
                                    }
                                </select><br>
                                <input type="text" placeholder="Note" asp-for="@Model.request.Request_Note" style="margin-bottom:10px;">
                                <div class="btnCreate">
                                        <input type="hidden" asp-for="@Model.is_Book_Create" value="true"/>
                                        <input type="hidden" asp-for="@Model.request.Is_RequestBook_Status" value="true" />
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" style="font-size:20px;margin-right:5px;">Cancel</button>
                                        <button onclick="oldBookRequest()" class="btn btn-primary" type="submit" style="font-size:20px;;margin-right:5px;">Create</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                       @* Create Book Old*@
                        <div class="tab-pane fade" id="oldBook" role="tabpanel"
                             aria-labelledby="pills-illustration-tab">
                            <h2 style="color:azure">Create Booking Request</h2><br>
                                <form method="post">
                                     <input type="hidden" name="number" value="1" />
                            <select class="form-select" asp-for="@Model.request.Book_Id" style="width:205.33px; height: 27.56px; font-size:15px;margin:0 0 0 136px;">
                            @foreach (var i in Model.books)
                            {
                                <option value="@i.Book_Id">@i.Book_Title</option>
                            }
                        </select><br>
                            <input type="number" placeholder="Quantity" asp-for="@Model.request.Request_Quantity" style="margin-bottom:10px;"><br>
                            <input type="text" placeholder="Note" asp-for="@Model.request.Request_Note" style="margin-bottom:10px;">
                            <div class="btnCreate">
                                    <input type="hidden" asp-for="@Model.is_Book_Create" value="false" />
                                    <input type="hidden" asp-for="@Model.request.Is_RequestBook_Status" value="false" />
                                    <button type="button" class="btn btn-danger" data-dismiss="modal" style="font-size:20px;;margin-right:5px;">Cancel</button>
                                    <button onclick="oldBookRequest()" class="btn btn-primary" type="submit" style="font-size:20px;;margin-right:5px;">Create</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
