@page 
@model RazorWeb.Pages.StaffPage.StaffManageBooksModel
@using BookStoreAPI.Core.DTO;
@using BookStoreAPI.Core.Model;
@{
}
<!-- home content -->
<section class="home-section">
    @*Category*@
    <form class="formCategory" method="POST">
        <spam class="categoryText">Category</spam>
        <select class="comboxCategory" name="choiceCategory">
            @foreach (Category c in Model.categories)
            {
                <option value="@c.Category_Id">@c.Category_Name</option>
            }
        </select>
        <button class="choice btn btn-secondary" asp-page-handler="Category" type="submit">Go</button>
    </form><br />
    <div class="itemList row" style="height:800px;margin-bottom:60px;">
        @*Display book*@
        @foreach (BookDTO b in Model.books)
        {
            <div class="item col-lg-4">
                <form >
                    <div class="border" style="height: 415px;width: 355px">
                        <img style="height: 230px; width: 330px;" src="@b.Image_URL" />
                        <p class="name">@b.Book_Title </p>
                        <p class="price"/>
                        <p style="font-size:15px;">@b.Book_Price<small style="text-decoration:underline">đ</small></p>
                        
                            @*call book detail page*@
                        <a class="viewDetail btn btn-info" asp-page="StaffManageBooksDetail" asp-route-Book_Id="@b.Book_Id">View Detail</a>
                        <p>
                    </div>
                </form>
            </div>
        }
    </div>
    <br />
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex w-100 justify-content-center">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?pageNumber=1">First</a>
                    </li>
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?pageNumber=@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link" href="?pageNumber=@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?pageNumber=@(Model.CurrentPage + 1)">Next</a>
                    </li>
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?pageNumber=@Model.TotalPages">Last</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</section>
