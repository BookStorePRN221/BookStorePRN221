<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RazorWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/SellerStyle.css"/>
    <!-- BoxIcon CDN Link -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>

<header>
    <div class="header">
        <div class="header-menu">
            <!-- even menu sidebar -->
            <div class="sidebar-button__logo" style="padding-right:24px">
                <div class="sidebar-button">
                    <i class='bx bx-menu sidebarBtn'></i>
                    <!-- <span class="dashboard">Dashboard</span> -->
                </div>

                <!-- div of logo -->
                <div class="logo-details">
                    <img src="~/images/logo.jpg" width="100" height="100" alt="Logo Phuong Nam Bookstore">
                    <span class="logo_name">Book Store</span>
                </div>
            </div>
            <div class="seachbox-profile">
                <div class="wraper_searchbox_profile">
                    <div class="search-box">
                        <form method="GET" action="search">
                            <input name="search" placeholder="Search...">
                            <button type='submit'>
                                <i class='bx bx-search-alt-2'></i>
                            </button>
                        </form>
                    </div>
                    <div class="profile_details">
                        <img src="~/images/admin1.png" width="50px" height="50px" alt="image admin">
                        <div class="name_role">
                            <span class="name">@User.Identity.Name</span>
                            <i class='bx bxs-chevron-down'></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<nav class="sidebar">
    <!-- link in sidebar -->
    <ul class="nav-links">
        <li>
            <a href="/SellerPage/SellerManageNodify">
                <i class='bx bxs-bell'></i>
                <span class="links_name">Notification</span>
            </a>
        </li>
        <li>
            <a href="/SellerPage/SellerManageBooks">
                <i class='bx bx-book'></i>
                <span class="links_name">Books</span>
            </a>
        </li>
        <li>
            <a href="/SellerPage/SellerManageOrder">
                <i class='bx bx-package'></i>
                <span class="links_name">Order</span>
            </a>
        </li>
        <li>
            <a href="/SellerPage/SellerManageCart">
                <i class='bx bx-cart'></i>
                <span class="links_name">Cart</span>
            </a>
        </li>
        <li>
            <a href="/Login">
                <i class='bx bx-log-out'></i>
                <span class="links_name">Log out</span>
            </a>
        </li>
    </ul>
</nav>

<!-- home content -->
<section class="home-section">
    @RenderBody()
</section>


<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/script.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>